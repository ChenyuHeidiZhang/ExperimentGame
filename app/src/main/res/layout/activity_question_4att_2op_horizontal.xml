                    android:gravity="center"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    android:text="50"
                    android:layout_gravity="center"/>

            </ViewAnimator>

            <ViewAnimator
                android:id="@+id/view_animator_probability2_win"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="150dp"
                android:layout_marginStart="150dp">

                <ImageView
                    android:id="@+id/image_view_probability2_win"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/probability_win"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text_view_probability2_win"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    android:text="40"
                    android:layout_gravity="center"/>

            </ViewAnimator>

            <ViewAnimator
                android:id="@+id/view_animator_dollar2_lose"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="300dp"
                android:layout_marginStart="300dp">

                <ImageView
                    android:id="@+id/image_view_dollar2_lose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dollar_lose"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text_view_dollar2_lose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    android:text="50"
                    android:layout_gravity="center"/>

            </ViewAnimator>

            <ViewAnimator
                android:id="@+id/view_animator_probability2_lose"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="450dp"
                android:layout_marginStart="450dp">

                <ImageView
                    android:id="@+id/image_view_probability2_lose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/probability_lose"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/text_view_probability2_lose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    android:text="40"
                    android:layout_gravity="center"/>

            </ViewAnimator>

            <Button
                android:id="@+id/button_select2"
                style="@android:style/Widget.Button"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="600dp"
                android:layout_marginLeft="600dp"
                android:text="@string/select"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>